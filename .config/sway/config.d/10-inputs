input "type:pointer" {
  # Set natural scrolling on mice
  natural_scroll enabled
}

input "type:touchpad" { 
  # set touchpad defaults
  click_method clickfinger
  middle_emulation enabled
  natural_scroll enabled
}

input "type:keyboard" {
  # Add custom keyboard rules:
  # 1. make caps lock an escape key
  # 2. press both shifts to activate capslock, press one to disable
  # 3. make the menu key a second win key
  xkb_options caps:escape,shift:both_capslock_cancel,altwin:menu_win
}

